<%- include('./partials/header') %>


<div class="container mx-auto">
  <div class="bg-white rounded-lg shadow-md p-6">
      <h1 class="text-3xl font-bold mb-6">Order Confirmation</h1>
      <div class="mb-4">
          <h2 class="text-2xl font-semibold">Order Summary</h2>
          <p class="text-lg">Total: $<%= total %></p>
          <p class="text-lg">Items: <%= items %></p>
      </div>
      <div class="mb-6">
          <h2 class="text-2xl font-semibold">Shipping Details</h2>
          <form action="/submit-order" method="POST" class="mt-4">
            <input type="hidden" name="total" value="<%= total %>">
            <input type="hidden" name="items" value="<%= items %>">
              <div class="mb-4">
                  <label for="name" class="block text-lg font-medium">Name</label>
                  <input type="text" id="name" name="name" class="w-full p-2 border border-gray-300 rounded-lg" required>
              </div>
              <div class="mb-4">
                  <label for="email" class="block text-lg font-medium">Email</label>
                  <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300 rounded-lg" required>
              </div>
              <div class="mb-4">
                <label for="email" class="block text-lg font-medium">Contact</label>
                <input type="phone" id="phone" name="contact" class="w-1/3 p-2 border border-gray-300 rounded-lg" required>
            </div>
              <div class="mb-4">
                  <label for="address" class="block text-lg font-medium">Address</label>
                  <textarea id="address" name="address" class="w-full p-2 border border-gray-300 rounded-lg" required></textarea>
              </div>
              <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700">Place Order</button>
          </form>
      </div>
  </div>
</div>
  










<%- include('./partials/footer') %>