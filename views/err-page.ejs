<%- include('./partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded shadow-md text-center max-w-md">
    <% var loggedin = (typeof(loggedin) !== "undefined" ? loggedin : true ) %>
    
    <h1 class="text-4xl font-bold text-red-500 mb-4">Oops!</h1>
    <p class="text-gray-700 mb-4">Something went wrong or might be you are not logged in. Please try again later or check it.</p>
    <% if(loggedin){ %>
    <a href="/shop" class="text-blue-500 hover:underline">Go back to homepage</a>
    <% } else { %>
      <a href="/" class="text-blue-500 hover:underline">Go back to
        login page</a>
        <% } %>
  </div>
</div>

<%- include('./partials/footer') %>