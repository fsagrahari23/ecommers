<%- include('./partials/OwnHea') %>
    <div class="w-full h-screen flex px-20">
        <div class="w-1/2 flex items-center justify-center h-screen">
            <div class="w-full px-32">
                <h4 class="text-2xl capitalize mb-5">Admin Registration</h4>
                <form action="/owner/create" method="post" class="mb-5">
                  <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="text" placeholder="enter your full name" name="fullname">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="email" placeholder="Email" name="email">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="password" placeholder="Password" name="password">
                    <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="sign up">
                </form>
                <a href="/owner/log" class="px-5 rounded-full py-3 mt-6 bg-blue-500 text-white">Login</a>
            </div>
        </div>
        
    </div>
    <%- include('./partials/footer') %>